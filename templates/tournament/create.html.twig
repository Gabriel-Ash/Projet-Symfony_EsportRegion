{% extends 'base.html.twig' %}
{% block title %}EsportRegion - Ajoutez un tournoi{% endblock %}
{% block body %}
<section id="subheader" class="jarallax">
    <img src="{{asset('images/background/3.webp')}}" class="jarallax-img" alt="">
    <div class="container z-1000">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="wow fadeInUp mb20" data-wow-delay=".2s">Création d'un tournois</h2>
            </div>                 
        </div>
    </div>
</section>
<!-- section close -->
<section>
    <div class="container position-relative z1000">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
               <div class="m-5">
                <twig:ButtonBootstrap
                    route="{{ path('app_tournament_list')  }}"
                    text="Retournez à la liste"
                    />
               </div>
            {{ form_start(formCreate) }}
                {{ form_row(formCreate.name) }}
                {{ form_row(formCreate.description) }}
                {{ form_row(formCreate.img_card) }}
                {{ form_row(formCreate.limit_player) }}
                {{ form_row(formCreate.registration_open) }}
                {{ form_row(formCreate.date_start) }}
                {{ form_row(formCreate.date_end) }}
                {{ form_row(formCreate.plateforms) }}
                <div class="form-group">  
                    <button type="submit" class="btn-main">Enregistrer</button>
                </div>
            {{ form_end(formCreate) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
