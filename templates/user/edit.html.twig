{% extends 'base.html.twig' %}
{% block title %}EsportRegion - Modification{% endblock %}
{% block body %}
<section id="subheader" class="jarallax">
    <img src="{{asset('images/background/8.webp')}}" class="jarallax-img" alt="">
    <div class="container z-1000">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="wow fadeInUp mb20" data-wow-delay=".2s">Modifiation des informations</h2>
            </div>                 
        </div>
    </div>
</section>
<!-- section close -->
<section>
    <div class="container position-relative z1000">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
               <div class="m-5">
               <twig:ButtonBootstrap
                route="{{ app.request.headers.get('referer') }}"
                text="Retournez à la précédente page"
                />
               </div>
            {{ form_start(formEdit) }}
                {{ form_row(formEdit.name) }}   
                {{ form_row(formEdit.surname) }}   
                {{ form_row(formEdit.pseudo) }}   
                {{ form_row(formEdit.email) }}  
                {% if formEdit.password is defined %} 
                    {{ form_row(formEdit.password) }}   
                {% endif %}
                {{ form_row(formEdit.isVerified) }}   
                <div class="form-group">  
                    <input type="submit" class="btn btn-main" value="Enregistrer">
                </div>
            {{ form_end(formEdit) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}