{% extends 'base.html.twig' %}
{% block title %}EsportRegion - Mon compte{% endblock %}
{% block body %}
<section id="subheader" class="jarallax">
    <img src="{{asset('images/background/8.webp')}}" class="jarallax-img" alt="">
    <div class="container z-1000">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="wow fadeInUp mb20" data-wow-delay=".2s">Ici vous pourrez accedez a la gestion complète de votre compte</h2>
            </div>                 
        </div>
    </div>
</section>
<!-- section close -->
    <div class="container my-5">
        <div class="row">
            {% include('_partial/flashes.inc.twig') %}
            <div class="col-lg-12">
                <h3 class="card-title">{{ users.name }}</h3>
                <div class="row">
                    <div class="col-md-6">                                
                        <p><strong>ID:</strong> {{ users.id }}</p>
                        <p><strong>Email:</strong> {{ users.email }}</p>
                        <p><strong>Nom:</strong> {{ users.name }}</p>
                        <p><strong>Prénom:</strong> {{ users.surname }}</p>
                        <p><strong>Pseudo:</strong> {{ users.pseudo }}</p>
                        {% if users.roles %}
                        <p><strong>Rôles:</strong>
                            {% for role in users.roles %}
                                <span class="badge bg-primary">{{ role }}</span>
                            {% endfor %}
                        </p>
                        {% endif %}
                        <!-- Ajoutez ici d'autres champs en fonction de votre entité User -->
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_profil_edit', {'id': users.id}) }}" class=" mx-3 btn-main wow fadeInUp">
                        <span>Modifier mon profil</span>
                    </a>
                    <a href="{{ path('app_profil_delete', {'id': users.id}) }}" class="btn-line wow fadeInUp" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce tournoi?');">
                        <span>Supprimer mon profil</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
